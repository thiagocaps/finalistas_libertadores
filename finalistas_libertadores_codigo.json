----------------------------
--- OPERADORES RELACIONAIS
--- >, <, >=, =<, ==, !=
----------------------------
$gt - greater than, maior que
$lt - less than, menor que
$eq - equal, igual

$lte
$gte
$ne

----------------------------
--- OPERADORES LÓGICOS
--- AND, OR, NOT
----------------------------

$or:[campo1, campo2]
$and:[campo1, campo2]
$not:{campo}

db.finalistas.find( {$and:[ {campeao:"Flamengo"}, {ano: {$lt: 2000 } } ] }).pretty()

SELECT * FROM finalistas WHERE campeao = "Flamengo" AND ano < 2000


db.finalistas.find( { $or: [ { campeao:"Corinthians" }, { ano: { $gt: 2015 } } ] } ).pretty()

SELECT * FROM finalistas WHERE vice = "Corinthians" OR ano > 2015


